{# app/templates/ui/steps/_08_preavis.html.j2 #}
<div class="step card" data-step="8" aria-hidden="true">
  <h3>08. Préavis &amp; Congés</h3>

  <div class="divider"></div>

  {# Ancienneté déplacée à l'étape 4 — on n’affiche plus ici les champs de saisie #}

  <!-- Saisie Préavis -->
  <h4 style="margin:0 0 6px">Préavis
    <span class="help" title="Le préavis minimal dépend de la catégorie et de l’ancienneté. Les dispositions conventionnelles s’appliquent en priorité.">i</span>
  </h4>

  <div class="grid2" style="margin-top:8px">
    <div>
      <label>Préavis démission (mois)</label>
      <input id="notice_dem" name="notice_resignation_months" type="number" step="0.5" min="0" data-legal="preavis">
      <small id="notice_dem_err" class="error-msg" aria-live="polite"></small>
    </div>
    <div>
      <label>Préavis licenciement (mois)</label>
      <input id="notice_lic" name="notice_dismissal_months" type="number" step="0.5" min="0" data-legal="preavis">
      <small id="notice_lic_err" class="error-msg" aria-live="polite"></small>
    </div>
    
  </div>

  <!-- Bandeau Minima (Préavis) -->
  <div id="notice_card" class="callout" data-slot="step8.card" style="display:none;margin-top:10px"></div>

  <div class="divider"></div>

  <!-- Congés payés -->
  <h4 style="margin:0 0 6px">Congés payés</h4>

  <div class="grid2">
    <div>
      <label>Nombre de jours de congés</label>
      <input id="cp_days_number" name="cp_days_number" type="number" min="0" step="1">
      <small id="cp_err" class="error-msg" aria-live="polite"></small>
    </div>
    <div>
      <label>Unité</label>
      <select id="cp_unit" name="cp_unit">
        <option value="ouvrés" selected>Jours ouvrés</option>
        <option value="ouvrables">Jours ouvrables</option>
      </select>
    </div>
  </div>

  <!-- Bandeau Infos (Congés) -->
  <div id="cp_card" class="callout" data-slot="step8.conges" style="display:none;margin-top:10px"></div>

  <div class="divider"></div>


  <div class="actions" style="margin-top:10px">
    <button class="btn" data-prev>Précédent</button>
    <button class="btn-primary" data-next>Suivant</button>
  </div>
</div>
